        android:layout_height="wrap_content"
        android:paddingRight="6dp"
        android:gravity="center_vertical"
        android:id="@+id/view_category_ticket"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flag"
            android:tint="#858585"
            android:scaleY="0.7"
            android:scaleX="0.7"
            tools:ignore="UseAppTint" />
        <TextView
            android:id="@+id/txt_ticket_category"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="#333333"
            android:textSize="12dp"
            android:text="ajhs d asd a s da sd sd  sd as d as da sd a sd asd as d as d as da sd a sd as d as d as d as d as d as d as da s da sd a sd as d as d as d as d as da sd a sd as d as d as da sd  asd a sd a s"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="6dp"
        android:gravity="center_vertical"
        android:id="@+id/view_priority_ticket"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sort_amount_down_alt"
            android:tint="#858585"
            android:scaleY="0.7"
            android:scaleX="0.7"
            />
        <TextView
            android:id="@+id/txt_ticket_priority"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="#333333"

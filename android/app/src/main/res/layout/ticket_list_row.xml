<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:orientation="vertical"
    android:id="@+id/item_ticket_row"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:paddingHorizontal="3dp"
        >
        <TextView
            android:id="@+id/txt_ticket_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:text="ajhs d asd a s da sd sd  sd as d as da sd a sd asd as d as d as da sd a sd as d as d as d as d as d as d as da s da sd a sd as d as d as d as d as da sd a sd as d as d as da sd  asd a sd a s"
            />
    </LinearLayout>


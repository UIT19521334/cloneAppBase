<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.CloudProSalesApp.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:theme="@style/AppTheme.ActivityQuickCreateAppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_global_search"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/widget_bg_shape"
            android:drawableLeft="@drawable/btn_search"
            android:gravity="left|center_vertical|center"
            android:shadowColor="@color/white"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textStyle="normal"
            />

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_call"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:drawableLeft="@drawable/btn_call"
            android:background="@drawable/widget_bg_shape"
            />
        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_meeting"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:drawableLeft="@drawable/btn_meeting"
            android:background="@drawable/widget_bg_shape"
            />
        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_task"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:drawableLeft="@drawable/btn_task"
            android:background="@drawable/widget_bg_shape"
            />
    </LinearLayout>
</RelativeLayout>
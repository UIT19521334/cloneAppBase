<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:editTextBackground">@drawable/edit_text</item>
    </style>

    <style name="Widget.CloudProSalesApp.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.CloudProSalesApp.AppWidget.ButtonView" parent="android:Widget">
        <item name="android:bottomRightRadius">12px</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Widget.CloudProSalesApp.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>
